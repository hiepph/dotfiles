#include ".Xcolors"

! fonts
URxvt.font: xft:Fira Code:regular:antialias=true:hinting=true
URxvt.boldFont: xft:Fira Code:bold:antialias=true:hinting=true
URxvt.italicFont: xft:Fira Code:italic:antialias=true:hinting=true
URxvt.boldItalicFont: xft:Fira Code:bold:italic:antialias=true:hinting=true

URxvt.letterSpace: -1

! interface
urxvt*scrollBar: false
urxvt*transparent: false

! misc
urxvt.saveLines: 9999
urxvt.iso14755: false

! clipboard
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard,matcher,keyboard-select,url-select

! URLs
URxvt.matcher.button: 1

! cursor
URxvt.cursorBlink: true

! Pointer
URxvt.pointerBlank: true
