#!/usr/bin/env fish

#
# IP utilities
#
# EXAMPLES:
#
# + show local v4:
#   $ ,ip local
#
# + show public v4:
#   $ ,ip public
#
if test (count $argv) -ne 1
    echo ",ip {public|local}" >&2
    exit 1
end

set subcommand $argv[1]

switch $subcommand
    case local
        switch (uname)
            case Linux
                hostname -I | awk '{print $1};'
            case \*
                ipconfig getifaddr en0
        end
    case public
        curl https://ipinfo.io/ip
end
