#!/usr/bin/env bb
; -*-Clojure-*-

(require '[babashka.curl :as curl])

(defn help []
  (println
   "USAGE: _gitignore <language>

Download .gitignore
source: https://github.com/github/gitignore

EXAMPLES
  $ _gitignore python"))

(when-not (= (count *command-line-args*) 1)
  (help)
  (System/exit 0))

(let [lang (str/capitalize (first *command-line-args*))]
  (do (print
       (:body
        (curl/get
         (format
          "https://raw.githubusercontent.com/github/gitignore/master/%s.gitignore"
          lang))))))
