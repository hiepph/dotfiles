#!/bin/bash
start_daemon()
{
        emacs --daemon
}

stop_daemon()
{
        emacsclient -e '(save-buffers-kill-emacs)'
}

new_window()
{
        emacsclient --create-frame &
}

new_tab()
{
        emacsclient -n $1 &
}

help()
{
        echo "   --start  start daemon"
        echo "   --stop   stop daemon"
        echo "-w --window new window"
        echo "-t --tab    new tab"
}

if [ "$1" == "" ]; then
    new_window
    exit
fi

case $1 in
    --start ) start_daemon ;;
    --stop ) stop_daemon ;;
    -w | --window) new_window ;;
    -t | --tab) new_tab ;;
    -h | --help ) help ;;
esac
